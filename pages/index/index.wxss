/* pages/index/index.wxss */
@import "/pages/weui.wxss";
page
{
  background-color: #f4f4f4f4;
  height: 100%;
  width: 100%;
  text-align: center;
}

.show
{
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 100%;
}

.title
{
  font-weight: bold;
  margin-bottom: 10rpx;
}

.showMsg
{
  padding: 10rpx 20rpx;
  align-content: center;
  width: 92%;
  text-align: center;
}
.showItem
{
  padding: 10px;
  align-content: center;
}

.list-container {
  width: 100%;
  height: 90%;
}

.line {
  width: 50%;
  height: 3px;
  border-top: 3px gray dotted;
  position: relative;
  margin: 0px auto;
}

.flower-list
{
  margin: 0, auto;
  position: relative;
  margin: 10px auto;
  border-top-color: gray;
  border-top-width: 2px;
  border-top-style: dotted;
  height: 50%;
  width: 92%;
}

.weui-media-box {
  text-align: left;
}