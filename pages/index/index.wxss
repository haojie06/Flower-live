/* pages/index/index.wxss */
@import "/pages/weui.wxss";
@import "/pages/iconfont.wxss";

page
{
  position: absolute;
  background-color: #f4f4f4f4;
  height: 100%;
  width: 100%;
  text-align: center;
}

.show
{
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 100%;
}

.title
{
  text-align: center;
  font-weight: bold;
  margin-bottom: 10rpx;
  border-bottom: 1px gray dotted;
}

.showMsg
{

  padding: 10rpx 20rpx;
  align-content: left;
  width: 92%;
  text-align: left;
}
.showItem
{
  padding: 10px;
  align-content: center;
  display: inline-block;
}

.list-container {
  width: 100%;
  height: 90%;
}

.line {
  width: 40%;
  height: 3px;
  border-top: 3px gray dotted;
  position: relative;
  margin: 0px auto auto 3px;
}

.flower-list
{
  margin: 0, auto;
  position: relative;
  margin: 5px auto;
  border-top-color: gray;
  border-top-width: 2px;
  border-top-style: dotted;
  height: 45%;
  width: 92%;
}

.weui-media-box {
  text-align: left;
  border-bottom: 0.5px gray solid;
}

.add-pot {
  position: absolute;
  width: 2em;
  height: 2em;
  border-radius: 200px;
  bottom: 10px;
  right: 5px;
  background: none;
  text-align: right;
  font-size: 2.8em;
}

.line-font {
  display: inline-block;
}