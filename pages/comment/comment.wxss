/* pages/comment/comment.wxss */

page
{
  text-align: center;
  width: 100%;
  height:100%;
  background-image: url("https://azmind.com/wp-content/uploads/2014/12/christmas-background-3.png");
}

.comment
{
  margin-right: 5%;
  margin-left: 5%;
  height:100%;
  align-items: center;
  background-color:#f4f4f4;
}

.title
{
  font-weight: bold;
  text-align: center;
  font-family:Georgia, serif;
}

.title.navigate
{
  position: absolute;
  top: 36%;
  width: 80%;
  display:flex;
  justify-content: space-around;
  background-color: white;
  padding-left:5%;
  padding-right: 5%;
  border-radius: 200rpx;
}

.box
{
  border-right-color: grey;
  border-right-style: solid;
  border-right-width: 0.1rem;
}

.carousel
{
  position:absolute;
  width: 85%;
  height: 35%;
  right: 7%;
  align-content: center;
}

.comment-list
{
  position: absolute;
  margin-top:10rpx;
  display: flex;
  top: 40%;
  height: 60%;
  width: 90%;
  border-top-width: 10rpx;
  border-top-color: rgb(245, 206, 35);
  border-top-style: double;
  flex-flow: column nowrap;
  background-color:#f4f4f4;
}

.list-item
{
  margin-top: 20rpx;
  padding-top: 30rpx;
  background-color: white;
  border-bottom-color: #f4f4f4;
  border-bottom-width: 50rpx;
  border-bottom-style: soild;
  border-radius: 60rpx;
}

.list-item image
{
  height: 350rpx;
  width: 100%;
}

.hover
{
  opacity: 0.5;
}